{{yield (hash
  customer             = (component 'power-select'
    options            = this.customersAndRecentTasks
    disabled           = this.disabled
    selected           = this.customer
    placeholder        = 'Select customer...'
    searchField        = 'longName'
    allowClear         = true
    tagName            = 'div'
    class              = 'customer-select'
    onChange           = (action (mut this.customer))
    extra              = (hash
      lazy             = true
      selectedTemplate = this.selectedTemplate
      optionTemplate   = this.customerOptionTemplate
    )
  )
  project              = (component 'power-select'
    options            = this.projects
    disabled           = (or this.disabled (not this.customer))
    selected           = this.project
    placeholder        = 'Select project...'
    searchField        = 'name'
    allowClear         = true
    tagName            = 'div'
    class              = 'project-select'
    onChange           = (action (mut this.project))
    extra              = (hash
      selectedTemplate = this.selectedTemplate
      optionTemplate   = this.projectOptionTemplate
    )
  )
  task                 = (component 'power-select'
    options            = this.tasks
    disabled           = (or this.disabled (not this.project))
    selected           = this.task
    placeholder        = 'Select task...'
    searchField        = 'name'
    allowClear         = true
    tagName            = 'div'
    class              = 'task-select'
    onChange           = (action (mut this.task))
    extra              = (hash
      selectedTemplate = this.selectedTemplate
      optionTemplate   = this.taskOptionTemplate
    )
  )
  clear                = (action 'clear')
  reset                = (action 'reset')
)}}
