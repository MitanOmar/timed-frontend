{{yield (hash
  customer             = (component 'power-select'
    options            = customersAndRecentTasks
    disabled           = disabled
    selected           = customer
    placeholder        = 'Select customer...'
    searchField        = 'name'
    allowClear         = true
    onfocus            = (action 'handleFocus')
    onblur             = (action 'handleBlur')
    onchange           = (action (mut customer))
    extra              = (hash
      selectedTemplate = selectedTemplate
      optionTemplate   = customerOptionTemplate
    )
  )
  project              = (component 'power-select'
    options            = projects
    disabled           = (or disabled (not customer))
    selected           = project
    placeholder        = 'Select project...'
    searchField        = 'name'
    allowClear         = true
    onfocus            = (action 'handleFocus')
    onblur             = (action 'handleBlur')
    onchange           = (action (mut project))
    extra              = (hash
      selectedTemplate = selectedTemplate
      optionTemplate   = optionTemplate
    )
  )
  task                 = (component 'power-select'
    options            = tasks
    disabled           = (or disabled (not project))
    selected           = task
    placeholder        = 'Select task...'
    searchField        = 'name'
    allowClear         = true
    onfocus            = (action 'handleFocus')
    onblur             = (action 'handleBlur')
    onchange           = (action (mut task))
    extra              = (hash
      selectedTemplate = selectedTemplate
      optionTemplate   = optionTemplate
    )
  )
  clear                = (action 'clear')
)}}
