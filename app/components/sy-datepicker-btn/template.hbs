{{#basic-dropdown horizontalPosition='auto-right' as |dd|}}
  <dd.trigger @tagName="button" @class="btn btn-default">
    {{fa-icon 'calendar'}}
  </dd.trigger>

  <dd.content>
    {{sy-calendar
      center         = this.center
      selected       = this.value
      class          = 'sy-datepicker'
      onCenterChange = (action (mut this.center) value='moment')
      onSelect       = (action this.on-change value='moment')
    }}
  </dd.content>
{{/basic-dropdown}}
