{{#basic-dropdown horizontalPosition='auto-right' as |dd|}}
  {{#dd.trigger tagName='button' class='btn btn-default'}}
    {{fa-icon 'calendar'}}
  {{/dd.trigger}}

  {{#dd.content}}
    {{sy-calendar
      center         = center
      selected       = value
      class          = 'sy-datepicker'
      onCenterChange = (action (mut center) value='moment')
      onSelect       = (action on-change value='moment')
    }}
  {{/dd.content}}
{{/basic-dropdown}}
