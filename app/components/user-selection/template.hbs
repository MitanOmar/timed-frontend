{{yield (hash
  user                 = (component 'power-select'
    options            = users
    disabled           = disabled
    selected           = user
    placeholder        = 'Select user...'
    searchField        = 'longName'
    tagName            = 'div'
    class              = 'user-select'
    allowClear         = true
    onchange           = (action on-change)
    extra              = (hash
      selectedTemplate = selectedTemplate
      optionTemplate   = optionTemplate
    )
  )
)}}
