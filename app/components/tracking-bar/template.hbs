<form class="form-inline" {{action 'start' on='submit'}}>
  <div class="form-group">
    {{task-selection
      _task               = activity.task
      projects            = projects
      tasks               = tasks
      disabled            = activity.active
      on-search-customers = (action on-search-customers)
      on-filter-projects  = (action on-filter-projects)
      on-filter-tasks     = (action on-filter-tasks)
      on-change           = (action (mut activity.task))
    }}
  </div>
  <div class="form-group" data-test-tracking-comment>
    {{input
      type        = 'text'
      class       = 'form-control'
      placeholder = 'Comment'
      value       = activity.comment
      disabled    = activity.active
    }}
  </div>
  <div class="form-group">
    {{record-button
      activity  = activity
      recording = activity.active
      on-start  = (action 'start')
      on-stop   = (action 'stop')
    }}
  </div>
</form>
