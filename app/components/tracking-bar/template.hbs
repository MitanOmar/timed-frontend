<form class="form-inline" {{action 'start' on='submit'}}>
  <div class="form-group">
    {{task-selection
      task      = activity.task
      customers = customers
      projects  = projects
      tasks     = tasks
      disabled  = activity.active
      on-change = (action (mut activity.task))
    }}
  </div>
  <div class="form-group" data-test-tracking-comment>
    {{input
      type        = 'text'
      class       = 'form-control'
      placeholder = 'Comment'
      value       = activity.comment
      disabled    = activity.active
    }}
  </div>
  <div class="form-group">
    {{record-button
      activity  = activity
      recording = recording
      ready     = ready
      on-start  = (action 'start')
      on-stop   = (action 'stop')
    }}
  </div>
</form>
