<BasicDropdown @horizontalPosition="auto-right" as |DropDown|>
  <DropDown.Trigger @tabindex="-1">
    <input
      autocomplete="off"
      id={{this.uniqueId}}
      name="date"
      type="text"
      class="form-control"
      pattern="\d{1,2}\.\d{1,2}\.\d{2,4}"
      value={{this.displayValue}}
      placeholder={{this.placeholder}}
      {{on "blur" (fn this.handleBlur DropDown)}}
      {{on "change" this.handleChange}}
      {{on "input" this.checkValidity}}
    />
  </DropDown.Trigger>

  <DropDown.Content>
    <SyCalendar
      @center={{this.center}}
      @selected={{@value}}
      class="sy-datepicker"
      @onCenterChange={{this.updateCenter}}
      @onSelect={{(fn this.updateSelect DropDown)}}
    />
  </DropDown.Content>
</BasicDropdown>
