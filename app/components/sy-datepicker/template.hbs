{{#basic-dropdown horizontalPosition='auto-right' as |dd|}}
  <dd.trigger @tabindex={{-1}}>
    <input
      type="text"
      class="form-control"
      pattern="\d{1,2}\.\d{1,2}\.\d{2,4}"
      name={{this.name}}
      value={{this.displayValue}}
      placeholder={{this.placeholder}}
      onfocus={{action 'handleFocus' dd}}
      onblur={{action 'handleBlur' dd}}
      onchange={{action 'handleChange'}}
      oninput={{action 'checkValidity'}}
    >
  </dd.trigger>

  <dd.content>
    {{sy-calendar
      center         = this.center
      selected       = this.value
      class          = 'sy-datepicker'
      onCenterChange = (action (mut this.center) value='moment')
      onSelect       = (action (queue (action this.on-change) (action 'checkValidity')) value='moment')
    }}
  </dd.content>
{{/basic-dropdown}}
