<div class="grid grid--6of12">
  <div class="grid-cell">
    <table class="table table--striped table--hover">
      <thead>
        <tr>
          <th>Customer</th>
          <th>Project</th>
          <th>Task</th>
          <th>Duration</th>
          <th>Comment</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |activity|}}
          <tr
            class="pointer {{if activity.active 'highlight'}}"
            {{action 'continueActivity' activity}}
            title="Continue this activity"
          >
            <td>{{activity.task.project.customer.name}}</td>
            <td>{{activity.task.project.name}}</td>
            <td>{{activity.task.name}}</td>
            <td>
              {{#if activity.active}}
                {{since activity.activeBlock.from activity.duration}}
              {{else}}
                {{duration-format activity.duration}}
              {{/if}}
            </td>
            <td>{{activity.comment}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
