<h1>Edit task template '{{model.name}}'</h1>

<form {{action 'save' on='submit'}}>
  <div class="form-group">
    <label>Name</label>
    {{input type='text' class='form-control' value=model.name}}
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Save</button>
    <button type="button" class="btn btn-danger" {{action 'delete'}}>Delete</button>
    {{#link-to 'task-templates.index' tagName='button' class='btn btn-default'}}Cancel{{/link-to}}
  </div>
</form>
